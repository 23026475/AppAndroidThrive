<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="300px" android:topLeftRadius="300px"/>
            <gradient android:startColor="@color/greensthrive" android:endColor="@color/bluesthrive" android:angle="100"/>

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/greensthrive" android:endColor="@color/bluesthrive" android:angle="100"/>
            <corners android:bottomRightRadius="300px" android:topLeftRadius="300px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="300px" android:topLeftRadius="300px"/>
            <gradient android:startColor="@color/greensthrive" android:endColor="@color/greensthrive" android:angle="100"/>
            <stroke android:width="1dp" android:color="@color/bluesthrive"/>
        </shape>
    </item>
</selector>