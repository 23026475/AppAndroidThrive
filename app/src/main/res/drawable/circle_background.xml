<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="500dp"/>
            <gradient android:startColor="@color/bluesthrive" android:endColor="@color/bluesthrive" android:angle="100"/>

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/bluesthrive" android:endColor="@color/bluesthrive" android:angle="100"/>
            <corners android:radius="500dp"/>        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="500dp"/>
            <gradient android:startColor="@color/bluesthrive" android:endColor="@color/bluesthrive" android:angle="100"/>
            <stroke android:width="1dp" android:color="@color/greensthrive"/>
        </shape>
    </item>

</selector>